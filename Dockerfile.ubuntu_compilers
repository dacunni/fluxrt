FROM ubuntu:latest

# Environment Variables
#  Prevent prompts by tzdata
ENV DEBIAN_FRONTEND=noninteractive
ENV TZ=America/Denver

RUN apt-get update

# Version Control / Build System / Compilers
RUN apt-get install -y git cmake make gcc g++ clang

# Third Party Libraries
RUN apt-get install -y libx11-dev

# Python Bindings
RUN apt-get install -y python3 python3-pip
RUN python3 -m pip install pybind11

# Install Google Test
RUN git clone -q https://github.com/google/googletest.git /googletest \
    && mkdir -p /googletest/build \
    && cd /googletest/build \
    && cmake .. && make -j && make install \
    && cd / && rm -rf /googletest

# Install Google Benchmark
RUN git clone -q https://github.com/google/benchmark.git /googlebenchmark \
    && cd /googlebenchmark \
    && cmake -E make_directory "build" \
    && cmake -E chdir "build" cmake -DBENCHMARK_DOWNLOAD_DEPENDENCIES=on -DCMAKE_BUILD_TYPE=Release ../ \
    && cmake --build "build" --config Release \
    && cmake --build "build" --config Release --target install \
    && cd / && rm -rf /googlebenchmark

# Update library search path
RUN echo /usr/local/lib >> /etc/ld.so.conf && ldconfig

